pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                sh '''
                   echo "BUILD NUMBER: ${BUILD_NUMBER}"
                   cd dt-ejb
                   mvn -DBUILD_NUMBER=${BUILD_NUMBER} clean test
                   cd ../Rest
                   mvn -DBUILD_NUMBER=${BUILD_NUMBER} clean test
                   cd ../web
                   mvn -DBUILD_NUMBER=${BUILD_NUMBER} clean test
                   '''
             }
        }
    }
}
